    "paths": {
        "/api/v1/authentication/register": {
            "summary": "Registers a new user in the database.",
            "post": {
                "tags": ["Authentication"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "firstName": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "lastName": {
                                        "type": "string",
                                        "example": "Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "john.doe@chalari.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "johndoe01"
                                    }
                                },
                                "required": ["firstName", "lastName", "email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Registered the user successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Registered the user successfully"
                                        }
                                    },
                                    "required": ["success", "message"]
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict. The provided email is already being used.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "A user with the given email already exists."
                                        }
                                    },
                                    "required": ["success", "message"]
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "The body format doesn't match the expected format.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Bad request format."
                                        }
                                    },
                                    "required": ["success", "message"]
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Something went wrong whilst registering a user"
                                        }
                                    },
                                    "required": ["success", "message"]
                                }
                            }
                        }
                    }
                }
            }
        },
