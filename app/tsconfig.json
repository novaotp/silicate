{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "paths": {
            "$/*": ["./src/*"],
            "$lib/*": ["./src/lib/*"],
            "$libs/*": ["../libs/*"]
        }
    },
    "include": ["../libs/**/*", "src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
