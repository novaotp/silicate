{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@app/*": ["src/app/*"],
            "@public/*": ["public/*"],
            "@libs/*": ["src/libs/*"],
            "@utils/*": ["src/utils/*"],
            "@components/*": ["src/components/*"],
            "@fonts": ["src/fonts/index.ts"],
            "@models/*": ["src/models/*"],
            "@data-access/*": ["src/database/access/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
